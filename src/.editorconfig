# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# WiX- 2 space indentation
[*.{wx*,.yml}]
indent_style = space
indent_size = 2
charset = utf-8

# Projects- 2 space indentation
[*.*proj]
indent_style = space
indent_size = 2
charset = utf-8

# Props- 2 space indentation
[*.{props,targets,config}]
indent_style = space
indent_size = 2
charset = utf-8

# C++- tab indentation
[*.{cpp,h}]
indent_style = tab
indent_size = 4
charset = utf-8

# CS- 4 space indentation
[*.cs]
indent_style = space
indent_size = 4
charset = utf-8
